    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "original_to_raw",
            "type": "debugpy",
            "request": "launch",
            "program": "original_to_raw.py",
            "console": "integratedTerminal",
            "python": "/opt/miniconda3/envs/diffalign/bin/python", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CONDA_DEFAULT_ENV": "diffalign"
            },
            "justMyCode": false,
            "args": [
                "+experiment=severi_default_pe_skip.yaml",
                "general.wandb.mode=offline"
            ]
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "diffalign/train.py",
            "console": "integratedTerminal",
            "python": "/opt/miniconda3/envs/diffalign/bin/python", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CONDA_DEFAULT_ENV": "diffalign"
            },
            "justMyCode": false,
            "args": [
                "+experiment=severi_default_pe_skip.yaml",
                "general.wandb.mode=offline"
            ]
        }
    ]
}